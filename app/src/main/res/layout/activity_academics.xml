<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".academics"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/acme"
        android:text="ACADEMICS INFORMATION"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/titleWindow"
        android:src="@drawable/sona_academics" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ACADEMICS SHEDULE"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>

            <TextView
                android:id="@+id/message1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RULES AND REGULATIONS"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RULES "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:id="@+id/message2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ATTENDENCE AND LEAVE RULES "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ATTENDENCE "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:id="@+id/message3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LEAVE "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:id="@+id/message4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HOLIDAYS "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>
            <TextView
                android:id="@+id/message5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ANTI-RAGGING "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>
            <TextView
                android:id="@+id/message6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="WHAT CONSTITUTES RAGGING "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>
            <TextView
                android:id="@+id/message7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RAGGING PUNISHMENTS "
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>

            <TextView
                android:id="@+id/message8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageWindow"
                android:textSize="19sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </ScrollView>






</LinearLayout>